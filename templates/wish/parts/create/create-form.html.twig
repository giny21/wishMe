<form method="POST" action="/wish/create">
    <div class="modal-body">
        <div class="form-group mt-2">
            <label class="small" for="name">Nazwa</label>
            <input name="name" class="form-control" type="text" maxlength="40" required>
        </div>
        <div class="form-group mt-2">
            <label class="small" for="wishlists[]">Listy</label>
            <select class="select-2-enable" name="wishlists[]" multiple="multiple">
                {% for wishlist in wishlists %}
                    {% if sourceWishlist is defined and sourceWishlist == wishlist %}
                        <option class="select2-selected" value="{{wishlist.id}}">{{wishlist.name}}</option>
                    {% else %}
                        <option value="{{wishlist.id}}">{{wishlist.name}}</option>
                    {% endif %}
                {% endfor %}
            </select>
        </div>
    </div>
    <div class="modal-footer">
        <button type="submit" class="btn btn-primary">Zapisz</button>
    </div>
</form>
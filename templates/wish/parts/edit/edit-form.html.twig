<form method="POST" action="/wish/edit/{{wish.id}}">
    <div class="modal-body">
        <div class="form-group mt-2">
            <label class="small" for="name">Nazwa</label>
            <input name="name" class="form-control" type="text" value="{{wish.name}}" maxlength="40" required>
        </div>
        <div class="form-group mt-2">
            <label class="small" for="wishlists[]">Listy</label>
            <select class="select-2-enable" name="wishlists[]" multiple="multiple">
                {% for wishlist in wishlists %}
                    {% if wish.wishlists.contains(wishlist) %}
                        <option class="select2-selected" value="{{wishlist.id}}">{{wishlist.name}}</option>
                    {% else %}
                        <option value="{{wishlist.id}}">{{wishlist.name}}</option>
                    {% endif %}
                {% endfor %}
            </select>
        </div>
        <div class="form-check">
            <input 
                class="form-check-input" 
                type="checkbox" 
                value="true" 
                id="important" 
                name="important"
                {{wish.important ? "checked" : ""}}
            >
            <label class="form-check-label" for="important">
                Jest ważny
            </label>
        </div>
    </div>
    <div class="modal-footer">
        <button type="submit" class="btn btn-primary">Zapisz</button>
        <a href="/wish/{{wish.id}}/remove" class="btn btn-primary">Usuń</a>
    </div>
</form>